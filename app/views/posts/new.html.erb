<%= render 'form', post: Post.new %>

<%= form_for @post do |f|%>
    <%= f.label :title%><br>
    <%= f.text_field :title%><br>

    <%= f.label :content%><br>
    <%= f.text_field :content%><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name%><br>

    <%= f.fields_for :categories, @post.categories.build do |categories_fields|%>
    <%= categories_fields.label :name%><br>
    <%= categories_fields.text_field :name%><br>
    <%end%>

    <%= f.label "Comment"%><br>
    <%= f.fields_for :comments, @post.comments.build do |comments_fields| %>
        <%= comments_fields.text_field :content%>
    <% end %><br>

    <%= f.submit %>
<%end%>